{
    "compilerOptions": {
        "target": "ES6",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "lib": ["ESNext", "DOM"],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
